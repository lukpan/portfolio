---
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;

const navItems = [
  { name: 'Work', href: `${base}#work` },
  { name: 'About', href: `${base}/about/` },
  { name: 'Contact', href: `${base}#contact` }
];
---

<header class="sticky top-0 z-50 bg-bg-primary/80 backdrop-blur-xl border-b border-border-subtle">
  <nav class="max-w-7xl mx-auto px-6 py-5">
    <div class="flex items-center justify-between">
      <!-- Logo/Name -->
      <a 
        href={base} 
        class="group text-xl font-display font-bold text-text-primary hover:text-accent-primary transition-colors duration-300"
      >
        <span class="relative">
          Luke Panaccio
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-accent group-hover:w-full transition-all duration-300"></span>
        </span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`relative text-sm font-semibold transition-colors duration-300 group ${
              currentPath === item.href 
                ? 'text-accent-primary' 
                : 'text-text-secondary hover:text-text-primary'
            }`}
          >
            {item.name}
            <span class={`absolute -bottom-1 left-0 h-0.5 bg-gradient-accent transition-all duration-300 ${
              currentPath === item.href ? 'w-full' : 'w-0 group-hover:w-full'
            }`}></span>
          </a>
        ))}
        
        <!-- Resume CTA -->
        <a
          href={`${base}/resume.pdf`}
          class="group relative inline-flex items-center px-5 py-2.5 bg-gradient-accent text-bg-primary text-sm font-bold rounded-lg overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-accent-primary/30 hover:-translate-y-0.5"
        >
          <span class="relative z-10">Resume</span>
          <svg class="w-4 h-4 ml-2 relative z-10 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button
        class="md:hidden p-2 rounded-lg bg-bg-elevated border border-border-subtle hover:border-accent-primary hover:bg-bg-hover transition-all duration-300"
        onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-6 pb-2 border-t border-border-subtle pt-6">
      <div class="flex flex-col space-y-3">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`text-sm font-semibold px-4 py-3 rounded-lg transition-all duration-300 ${
              currentPath === item.href
                ? 'bg-bg-elevated text-accent-primary border border-accent-primary/30'
                : 'text-text-secondary hover:text-text-primary hover:bg-bg-elevated border border-transparent'
            }`}
          >
            {item.name}
          </a>
        ))}
        <a
          href={`${base}/resume.pdf`}
          class="text-sm font-bold px-4 py-3 bg-gradient-accent text-bg-primary rounded-lg hover:shadow-lg hover:shadow-accent-primary/30 transition-all duration-300 text-center"
        >
          Download Resume
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  /* Custom utilities using CSS variables */
  .bg-bg-primary {
    background-color: var(--color-bg-primary);
  }
  
  .bg-bg-elevated {
    background-color: var(--color-bg-elevated);
  }
  
  .bg-bg-hover {
    background-color: var(--color-bg-hover);
  }
  
  .bg-gradient-accent {
    background: var(--gradient-accent);
  }
  
  .text-text-primary {
    color: var(--color-text-primary);
  }
  
  .text-text-secondary {
    color: var(--color-text-secondary);
  }
  
  .text-accent-primary {
    color: var(--color-accent-primary);
  }
  
  .text-bg-primary {
    color: var(--color-bg-primary);
  }
  
  .border-border-subtle {
    border-color: var(--color-border-subtle);
  }
  
  .border-accent-primary {
    border-color: var(--color-accent-primary);
  }
  
  /* Glassmorphism effect */
  header {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
</style>