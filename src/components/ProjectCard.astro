---
export interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
  tags?: string[];
  featured?: boolean;
}

const { title, description, image, href, tags = [], featured = false } = Astro.props;
---

<article class={`group relative overflow-hidden rounded-xl bg-white shadow-sm hover:shadow-xl transition-all duration-300 ${featured ? 'md:col-span-2 md:row-span-2' : ''}`}>
  <a href={href} class="block">
    <div class={`aspect-video overflow-hidden bg-gray-100 ${featured ? 'md:aspect-[16/10]' : ''}`}>
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    </div>
    
    <div class={`p-6 ${featured ? 'md:p-8' : ''}`}>
      <h3 class={`font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors ${featured ? 'text-2xl md:text-3xl' : 'text-xl'}`}>
        {title}
      </h3>
      
      <p class={`text-gray-600 mb-4 ${featured ? 'text-base md:text-lg' : 'text-sm'}`}>
        {description}
      </p>
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded-md">
              {tag}
            </span>
          ))}
        </div>
      )}
      
      <div class="mt-4 flex items-center text-primary-600 text-sm font-medium">
        View Case Study
        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
  </a>
</article>
