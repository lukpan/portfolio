---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  frontmatter: {
    title: string;
    tagline?: string;
    description?: string;
    client?: string;
    role?: string;
    timeline?: string;
    tools?: string[];
    audience?: string;
    deliverables?: string[];
    heroImage?: string;
    demoLink?: string;
    githubLink?: string;
    metrics?: {
      label: string;
      value: string;
    }[];
  };
}

const { frontmatter } = Astro.props;

// Pass through components prop for MDX support
const components = Astro.props.components || {};
---

<Layout title={`${frontmatter.title} - Luke Panaccio`} description={frontmatter.description}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-gray-50 to-gray-100 py-12 md:py-20">
      <div class="max-w-6xl mx-auto px-6">
        <div class="max-w-4xl">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            {frontmatter.title}
          </h1>
          {frontmatter.tagline && (
            <p class="text-xl text-gray-600">
              {frontmatter.tagline}
            </p>
          )}
        </div>
      </div>
    </section>
    
    <!-- Hero Image -->
    {frontmatter.heroImage && (
      <section class="max-w-6xl mx-auto px-6 -mt-8 mb-12">
        <div class="rounded-xl overflow-hidden shadow-2xl">
          <img
            src={frontmatter.heroImage}
            alt={frontmatter.title}
            class="w-full h-auto"
          />
        </div>
      </section>
    )}
    
    <!-- Project Overview -->
    <section class="py-12 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-8">
          <!-- Sidebar Info -->
          <div class="md:col-span-1">
            <div class="sticky top-24 space-y-6">
              {frontmatter.client && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Client/Context</h3>
                  <p class="text-gray-900">{frontmatter.client}</p>
                </div>
              )}
              
              {frontmatter.role && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Role</h3>
                  <p class="text-gray-900">{frontmatter.role}</p>
                </div>
              )}
              
              {frontmatter.timeline && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Timeline</h3>
                  <p class="text-gray-900">{frontmatter.timeline}</p>
                </div>
              )}
              
              {frontmatter.audience && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Target Audience</h3>
                  <p class="text-gray-900">{frontmatter.audience}</p>
                </div>
              )}
              
              {frontmatter.tools && frontmatter.tools.length > 0 && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Tools Used</h3>
                  <div class="flex flex-wrap gap-2">
                    {frontmatter.tools.map((tool) => (
                      <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded-md">
                        {tool}
                      </span>
                    ))}
                  </div>
                </div>
              )}
              
              {frontmatter.deliverables && frontmatter.deliverables.length > 0 && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Deliverables</h3>
                  <ul class="space-y-1">
                    {frontmatter.deliverables.map((item) => (
                      <li class="text-sm text-gray-700 flex items-start">
                        <span class="w-1 h-1 bg-gray-400 rounded-full mt-2 mr-2 flex-shrink-0"></span>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              
              <div class="pt-4 space-y-3">
                {frontmatter.demoLink && (
                  <a
                    href={frontmatter.demoLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center px-4 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors text-sm"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    View Demo
                  </a>
                )}
                
                {frontmatter.githubLink && (
                  <a
                    href={frontmatter.githubLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-colors text-sm"
                  >
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    View Code
                  </a>
                )}
              </div>
            </div>
          </div>
          
          <!-- Main Content -->
          <div class="md:col-span-3">
            <article class="prose prose-lg max-w-none 
              [&>h1]:mt-16 [&>h1]:mb-8
              [&>h2]:mt-16 [&>h2]:mb-8 [&>h2]:text-3xl
              [&>h3]:mt-12 [&>h3]:mb-6 [&>h3]:text-2xl
              [&>h4]:mt-10 [&>h4]:mb-4
              [&>p]:mb-8 [&>p]:leading-relaxed [&>p]:text-lg
              [&>ul]:my-8 [&>ul]:list-disc [&>ul]:pl-6
              [&>ol]:my-8 [&>ol]:list-decimal [&>ol]:pl-6
              [&>ul>li]:my-3 [&>ul>li]:pl-2 [&>ul>li]:text-lg [&>ul>li]:font-normal
              [&>ol>li]:my-3 [&>ol>li]:pl-2 [&>ol>li]:text-lg [&>ol>li]:font-normal
              [&>blockquote]:my-10
              [&>pre]:my-10">
              <slot />
            </article>
            
            <!-- Metrics if available -->
            {frontmatter.metrics && frontmatter.metrics.length > 0 && (
              <div class="mt-12 p-8 bg-gradient-to-br from-primary-50 to-primary-100 rounded-xl">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Impact & Results</h2>
                <div class="grid md:grid-cols-3 gap-6">
                  {frontmatter.metrics.map((metric) => (
                    <div class="text-center">
                      <div class="text-3xl font-bold text-primary-600">{metric.value}</div>
                      <div class="text-sm text-gray-700 mt-1">{metric.label}</div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
    
    <!-- Navigation -->
    <section class="py-12 border-t border-gray-200">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex justify-between items-center">
          <a
            href="/#work"
            class="text-gray-600 hover:text-gray-900 transition-colors"
          >
            ‚Üê Back to Projects
          </a>
          <a
            href="/#contact"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors"
          >
            Get In Touch
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
