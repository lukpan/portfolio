---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TableOfContents from '../components/TableOfContents.astro';

const base = import.meta.env.BASE_URL;

export interface Props {
  frontmatter: {
    title: string;
    tagline?: string;
    description?: string;
    client?: string;
    role?: string;
    timeline?: string;
    tools?: string[];
    audience?: string;
    deliverables?: string[];
    heroImage?: string;
    demoLink?: string;
    githubLink?: string;
    metrics?: {
      label: string;
      value: string;
    }[];
  };
}

const { frontmatter } = Astro.props;
const components = Astro.props.components || {};
---

<Layout title={`${frontmatter.title} - Luke Panaccio`} description={frontmatter.description}>
  <Header />
  
  <main>
    <!-- Hero Section with atmospheric gradient -->
    <section class="relative overflow-hidden">
      <!-- Atmospheric background -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-accent-primary/10 rounded-full blur-[120px] animate-glow"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6 py-20 md:py-32">
        <div class="max-w-4xl stagger-children">
          <!-- Breadcrumb -->
          <div class="flex items-center gap-2 text-sm text-text-tertiary mb-8">
            <a href={`${base}#work`} class="hover:text-accent-primary transition-colors">Projects</a>
            <span>/</span>
            <span class="text-text-secondary">{frontmatter.title}</span>
          </div>
          
          <h1 class="text-5xl md:text-7xl font-bold text-text-primary mb-6 leading-tight">
            {frontmatter.title}
          </h1>
          
          {frontmatter.tagline && (
            <p class="text-xl md:text-2xl text-text-secondary font-light leading-relaxed max-w-3xl">
              {frontmatter.tagline}
            </p>
          )}
          
          <!-- Quick Actions -->
          <div class="flex flex-wrap gap-4 mt-10">
            {frontmatter.demoLink && (
              <a
                href={frontmatter.demoLink}
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center px-6 py-3 bg-gradient-accent text-bg-primary rounded-lg font-semibold hover:shadow-xl hover:shadow-accent-primary/20 transition-all duration-300 hover:-translate-y-0.5"
              >
                <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                View Live Demo
              </a>
            )}
            
            {frontmatter.githubLink && (
              <a
                href={frontmatter.githubLink}
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center px-6 py-3 bg-bg-elevated border border-border-medium rounded-lg font-semibold text-text-primary hover:border-accent-primary hover:bg-bg-hover transition-all duration-300"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View Source
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
    
    <!-- Hero Image with dramatic presentation -->
    {frontmatter.heroImage && (
      <section class="max-w-7xl mx-auto px-6 -mt-8 mb-20 animate-fade-in" style="animation-delay: 0.6s; opacity: 0;">
        <div class="relative group">
          <!-- Glow effect behind image -->
          <div class="absolute -inset-4 bg-gradient-accent opacity-20 blur-2xl rounded-2xl group-hover:opacity-30 transition-opacity duration-500"></div>
          
          <div class="relative rounded-2xl overflow-hidden border border-border-medium shadow-2xl">
            <img
              src={frontmatter.heroImage}
              alt={frontmatter.title}
              class="w-full h-auto"
            />
          </div>
        </div>
      </section>
    )}
    
    <!-- Project Overview -->
    <section class="py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid xl:grid-cols-5 gap-12 lg:gap-16">
          <!-- Sidebar Info -->
          <div class="xl:col-span-1">
            <div class="sticky top-24 space-y-8">
              <!-- Project Meta Card -->
              <div class="bg-bg-elevated border border-border-medium rounded-xl p-6 space-y-6">
                {frontmatter.client && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Client/Context</h3>
                    <p class="text-text-primary font-medium">{frontmatter.client}</p>
                  </div>
                )}
                
                {frontmatter.role && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Role</h3>
                    <p class="text-text-primary font-medium">{frontmatter.role}</p>
                  </div>
                )}
                
                {frontmatter.timeline && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Timeline</h3>
                    <p class="text-text-primary font-medium">{frontmatter.timeline}</p>
                  </div>
                )}
                
                {frontmatter.audience && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Audience</h3>
                    <p class="text-text-secondary text-sm leading-relaxed">{frontmatter.audience}</p>
                  </div>
                )}
              </div>
              
              <!-- Tools -->
              {frontmatter.tools && frontmatter.tools.length > 0 && (
                <div>
                  <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-3">Technologies</h3>
                  <div class="flex flex-wrap gap-2">
                    {frontmatter.tools.map((tool) => (
                      <span class="inline-flex items-center px-3 py-1.5 bg-bg-hover border border-border-subtle text-text-secondary text-xs rounded-md font-medium hover:border-accent-primary hover:text-accent-primary transition-colors">
                        {tool}
                      </span>
                    ))}
                  </div>
                </div>
              )}
              
              {frontmatter.deliverables && frontmatter.deliverables.length > 0 && (
                <div>
                  <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-3">Deliverables</h3>
                  <ul class="space-y-2">
                    {frontmatter.deliverables.map((item) => (
                      <li class="text-sm text-text-secondary flex items-start">
                        <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>
          
          <!-- Main Content -->
          <div class="xl:col-span-3">
            <!-- Prose styling for MDX content -->
            <article class="project-content">
              <slot />
            </article>
            
            <!-- Metrics Display -->
            {frontmatter.metrics && frontmatter.metrics.length > 0 && (
              <div class="mt-16 relative">
                <!-- Glow background -->
                <div class="absolute inset-0 bg-gradient-accent opacity-5 blur-3xl rounded-2xl"></div>
                
                <div class="relative bg-gradient-to-br from-bg-elevated to-bg-secondary border border-border-medium rounded-2xl p-8 md:p-12">
                  <h2 class="text-3xl font-display font-bold text-text-primary mb-10">Impact & Results</h2>
                  <div class="grid md:grid-cols-3 gap-8">
                    {frontmatter.metrics.map((metric, index) => (
                      <div class="text-center group">
                        <div class="text-5xl md:text-6xl font-display font-bold bg-gradient-accent bg-clip-text text-transparent mb-3 group-hover:scale-110 transition-transform duration-300">
                          {metric.value}
                        </div>
                        <div class="text-sm text-text-tertiary uppercase tracking-wide font-semibold">
                          {metric.label}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            )}
          </div>
          
          <!-- Right sidebar - Table of Contents -->
          <div class="xl:col-span-1 hidden xl:block">
            <TableOfContents />
          </div>
        </div>
      </div>
    </section>
    
    <!-- Navigation Footer -->
    <section class="py-12 border-t border-border-subtle">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-6">
          <a
            href={`${base}#work`}
            class="group inline-flex items-center text-text-secondary hover:text-accent-primary transition-colors"
          >
            <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to All Projects
          </a>
          
          <a
            href={`${base}#contact`}
            class="group inline-flex items-center px-6 py-3 bg-gradient-accent text-bg-primary rounded-lg font-semibold hover:shadow-xl hover:shadow-accent-primary/20 transition-all duration-300 hover:-translate-y-0.5"
          >
            Let's Work Together
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style is:global>
  /* Project Content Styling */
  .project-content {
    max-width: none;
    font-size: 1.125rem;
    line-height: 2;
    color: var(--color-text-secondary);
  }
  
  /* Dramatic heading hierarchy with generous spacing */
  .project-content h1 {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: clamp(2rem, 8vw, 4rem);
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--color-text-primary);
    margin-top: 6rem;
    margin-bottom: 3rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }
  
  .project-content h2 {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: clamp(1.75rem, 6vw, 3.5rem);
    line-height: 1.15;
    letter-spacing: -0.025em;
    color: var(--color-text-primary);
    margin-top: clamp(3rem, 8vw, 8rem);
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border-subtle);
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }
  
  .project-content h3 {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    line-height: 1.3;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    margin-top: clamp(2.5rem, 6vw, 5rem);
    margin-bottom: 2rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }
  
  .project-content h4 {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    line-height: 1.4;
    letter-spacing: -0.015em;
    color: var(--color-accent-primary);
    margin-top: clamp(2rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }
  
  /* Generous paragraph spacing and readable line height */
  .project-content p {
    margin-bottom: 2rem;
    line-height: 2;
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--color-text-secondary);
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  /* Breathing room for lists */
  .project-content ul,
  .project-content ol {
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
    padding-left: 2rem;
  }
  
  .project-content ul {
    list-style-type: disc;
  }
  
  .project-content ol {
    list-style-type: decimal;
  }
  
  .project-content li {
    margin-top: 1rem;
    margin-bottom: 1rem;
    line-height: 2;
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--color-text-secondary);
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  .project-content li > ul,
  .project-content li > ol {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  
  /* Emphasized text */
  .project-content strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  /* Links with hover effect */
  .project-content a {
    color: var(--color-accent-primary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  .project-content a:hover {
    text-decoration: underline;
    color: var(--color-accent-secondary);
  }
  
  /* Code styling */
  .project-content code {
    font-family: var(--font-mono);
    background-color: var(--color-bg-elevated);
    color: var(--color-accent-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.95em;
  }
  
  .project-content pre {
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border-medium);
    border-radius: 0.75rem;
    padding: 1rem;
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
    overflow-x: auto;
    max-width: 100%;
  }
  
  @media (min-width: 768px) {
    .project-content pre {
      padding: 2.5rem;
    }
  }
  
  .project-content pre code {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: 0.9rem;
  }
  
  /* Blockquotes with dramatic spacing */
  .project-content blockquote {
    border-left: 4px solid var(--color-accent-primary);
    padding-left: 1rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    font-style: italic;
    color: var(--color-text-secondary);
    font-size: clamp(1rem, 2vw, 1.125rem);
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  @media (min-width: 768px) {
    .project-content blockquote {
      padding-left: 2rem;
      margin-top: 3rem;
      margin-bottom: 3rem;
    }
  }
  
  /* Images with generous spacing */
  .project-content img {
    border-radius: 0.75rem;
    border: 1px solid var(--color-border-medium);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
    margin-top: 3rem;
    margin-bottom: 3rem;
    width: 100%;
    height: auto;
  }
  
  /* Horizontal rules for section breaks */
  .project-content hr {
    border: none;
    border-top: 1px solid var(--color-border-medium);
    margin-top: 5rem;
    margin-bottom: 5rem;
  }
  
  /* Tables with proper spacing */
  .project-content table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
    font-size: clamp(0.875rem, 2vw, 1rem);
    display: block;
    overflow-x: auto;
    max-width: 100%;
  }
  
  .project-content th {
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
    font-weight: 600;
    padding: 1rem 1.5rem;
    text-align: left;
    border-bottom: 2px solid var(--color-border-medium);
  }
  
  .project-content td {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--color-border-subtle);
    color: var(--color-text-secondary);
    line-height: 1.8;
  }
  
  .project-content tbody tr:hover {
    background-color: var(--color-bg-hover);
  }
</style>

<style>
  /* Additional animations for this layout */
  @keyframes glow {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.15;
    }
  }
  
  .animate-glow {
    animation: glow 8s ease-in-out infinite;
  }
  
  /* Custom utilities using CSS variables */
  .bg-bg-primary {
    background-color: var(--color-bg-primary);
  }
  
  .bg-bg-secondary {
    background-color: var(--color-bg-secondary);
  }
  
  .bg-bg-elevated {
    background-color: var(--color-bg-elevated);
  }
  
  .bg-bg-hover {
    background-color: var(--color-bg-hover);
  }
  
  .bg-gradient-accent {
    background: var(--gradient-accent);
  }
  
  .text-text-primary {
    color: var(--color-text-primary);
  }
  
  .text-text-secondary {
    color: var(--color-text-secondary);
  }
  
  .text-text-tertiary {
    color: var(--color-text-tertiary);
  }
  
  .text-accent-primary {
    color: var(--color-accent-primary);
  }
  
  .text-accent-secondary {
    color: var(--color-accent-secondary);
  }
  
  .border-border-subtle {
    border-color: var(--color-border-subtle);
  }
  
  .border-border-medium {
    border-color: var(--color-border-medium);
  }
  
  .border-accent-primary {
    border-color: var(--color-accent-primary);
  }
  
  /* Smooth hover transitions on links within article */
  article a {
    position: relative;
  }
  
  article a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: 0;
    left: 0;
    background-color: var(--color-accent-primary);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }
  
  article a:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }
</style>