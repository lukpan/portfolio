---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;

export interface Props {
  frontmatter: {
    title: string;
    tagline?: string;
    description?: string;
    client?: string;
    role?: string;
    timeline?: string;
    tools?: string[];
    audience?: string;
    deliverables?: string[];
    heroImage?: string;
    demoLink?: string;
    githubLink?: string;
    metrics?: {
      label: string;
      value: string;
    }[];
  };
}

const { frontmatter } = Astro.props;
const components = Astro.props.components || {};
---

<Layout title={`${frontmatter.title} - Luke Panaccio`} description={frontmatter.description}>
  <Header />
  
  <main>
    <!-- Hero Section with atmospheric gradient -->
    <section class="relative overflow-hidden">
      <!-- Atmospheric background -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-accent-primary/10 rounded-full blur-[120px] animate-glow"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6 py-20 md:py-32">
        <div class="max-w-4xl stagger-children">
          <!-- Breadcrumb -->
          <div class="flex items-center gap-2 text-sm text-text-tertiary mb-8">
            <a href={`${base}#work`} class="hover:text-accent-primary transition-colors">Projects</a>
            <span>/</span>
            <span class="text-text-secondary">{frontmatter.title}</span>
          </div>
          
          <h1 class="text-5xl md:text-7xl font-bold text-text-primary mb-6 leading-tight">
            {frontmatter.title}
          </h1>
          
          {frontmatter.tagline && (
            <p class="text-xl md:text-2xl text-text-secondary font-light leading-relaxed max-w-3xl">
              {frontmatter.tagline}
            </p>
          )}
          
          <!-- Quick Actions -->
          <div class="flex flex-wrap gap-4 mt-10">
            {frontmatter.demoLink && (
              <a
                href={frontmatter.demoLink}
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center px-6 py-3 bg-gradient-accent text-bg-primary rounded-lg font-semibold hover:shadow-xl hover:shadow-accent-primary/20 transition-all duration-300 hover:-translate-y-0.5"
              >
                <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                View Live Demo
              </a>
            )}
            
            {frontmatter.githubLink && (
              <a
                href={frontmatter.githubLink}
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center px-6 py-3 bg-bg-elevated border border-border-medium rounded-lg font-semibold text-text-primary hover:border-accent-primary hover:bg-bg-hover transition-all duration-300"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View Source
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
    
    <!-- Hero Image with dramatic presentation -->
    {frontmatter.heroImage && (
      <section class="max-w-7xl mx-auto px-6 -mt-8 mb-20 animate-fade-in" style="animation-delay: 0.6s; opacity: 0;">
        <div class="relative group">
          <!-- Glow effect behind image -->
          <div class="absolute -inset-4 bg-gradient-accent opacity-20 blur-2xl rounded-2xl group-hover:opacity-30 transition-opacity duration-500"></div>
          
          <div class="relative rounded-2xl overflow-hidden border border-border-medium shadow-2xl">
            <img
              src={frontmatter.heroImage}
              alt={frontmatter.title}
              class="w-full h-auto"
            />
          </div>
        </div>
      </section>
    )}
    
    <!-- Project Overview -->
    <section class="py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid lg:grid-cols-4 gap-12 lg:gap-16">
          <!-- Sidebar Info -->
          <div class="lg:col-span-1">
            <div class="sticky top-24 space-y-8">
              <!-- Project Meta Card -->
              <div class="bg-bg-elevated border border-border-medium rounded-xl p-6 space-y-6">
                {frontmatter.client && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Client/Context</h3>
                    <p class="text-text-primary font-medium">{frontmatter.client}</p>
                  </div>
                )}
                
                {frontmatter.role && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Role</h3>
                    <p class="text-text-primary font-medium">{frontmatter.role}</p>
                  </div>
                )}
                
                {frontmatter.timeline && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Timeline</h3>
                    <p class="text-text-primary font-medium">{frontmatter.timeline}</p>
                  </div>
                )}
                
                {frontmatter.audience && (
                  <div>
                    <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-2">Audience</h3>
                    <p class="text-text-secondary text-sm leading-relaxed">{frontmatter.audience}</p>
                  </div>
                )}
              </div>
              
              <!-- Tools -->
              {frontmatter.tools && frontmatter.tools.length > 0 && (
                <div>
                  <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-3">Technologies</h3>
                  <div class="flex flex-wrap gap-2">
                    {frontmatter.tools.map((tool) => (
                      <span class="inline-flex items-center px-3 py-1.5 bg-bg-hover border border-border-subtle text-text-secondary text-xs rounded-md font-medium hover:border-accent-primary hover:text-accent-primary transition-colors">
                        {tool}
                      </span>
                    ))}
                  </div>
                </div>
              )}
              
              {frontmatter.deliverables && frontmatter.deliverables.length > 0 && (
                <div>
                  <h3 class="text-xs font-bold text-accent-primary uppercase tracking-wider mb-3">Deliverables</h3>
                  <ul class="space-y-2">
                    {frontmatter.deliverables.map((item) => (
                      <li class="text-sm text-text-secondary flex items-start">
                        <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>
          
          <!-- Main Content -->
          <div class="lg:col-span-3">
            <!-- Prose styling for MDX content -->
            <article class="prose prose-invert prose-lg max-w-none
              prose-headings:font-display prose-headings:font-bold prose-headings:text-text-primary
              prose-h1:text-5xl prose-h1:mt-16 prose-h1:mb-8 prose-h1:leading-tight
              prose-h2:text-4xl prose-h2:mt-20 prose-h2:mb-8 prose-h2:leading-tight prose-h2:border-b prose-h2:border-border-subtle prose-h2:pb-4
              prose-h3:text-2xl prose-h3:mt-12 prose-h3:mb-6
              prose-h4:text-xl prose-h4:mt-10 prose-h4:mb-4 prose-h4:text-accent-primary
              prose-p:text-text-secondary prose-p:leading-relaxed prose-p:mb-6
              prose-strong:text-text-primary prose-strong:font-semibold
              prose-a:text-accent-primary prose-a:no-underline prose-a:font-medium hover:prose-a:underline
              prose-code:text-accent-secondary prose-code:bg-bg-elevated prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:font-mono prose-code:text-sm prose-code:before:content-none prose-code:after:content-none
              prose-pre:bg-bg-elevated prose-pre:border prose-pre:border-border-medium prose-pre:rounded-xl prose-pre:p-6
              prose-ul:my-6 prose-ul:list-disc prose-ul:pl-6
              prose-ol:my-6 prose-ol:list-decimal prose-ol:pl-6
              prose-li:text-text-secondary prose-li:my-2 prose-li:leading-relaxed
              prose-blockquote:border-l-4 prose-blockquote:border-accent-primary prose-blockquote:pl-6 prose-blockquote:italic prose-blockquote:text-text-secondary
              prose-img:rounded-xl prose-img:border prose-img:border-border-medium prose-img:shadow-xl
              prose-hr:border-border-medium prose-hr:my-12">
              <slot />
            </article>
            
            <!-- Metrics Display -->
            {frontmatter.metrics && frontmatter.metrics.length > 0 && (
              <div class="mt-16 relative">
                <!-- Glow background -->
                <div class="absolute inset-0 bg-gradient-accent opacity-5 blur-3xl rounded-2xl"></div>
                
                <div class="relative bg-gradient-to-br from-bg-elevated to-bg-secondary border border-border-medium rounded-2xl p-8 md:p-12">
                  <h2 class="text-3xl font-display font-bold text-text-primary mb-10">Impact & Results</h2>
                  <div class="grid md:grid-cols-3 gap-8">
                    {frontmatter.metrics.map((metric, index) => (
                      <div class="text-center group">
                        <div class="text-5xl md:text-6xl font-display font-bold bg-gradient-accent bg-clip-text text-transparent mb-3 group-hover:scale-110 transition-transform duration-300">
                          {metric.value}
                        </div>
                        <div class="text-sm text-text-tertiary uppercase tracking-wide font-semibold">
                          {metric.label}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
    
    <!-- Navigation Footer -->
    <section class="py-12 border-t border-border-subtle">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-6">
          <a
            href={`${base}#work`}
            class="group inline-flex items-center text-text-secondary hover:text-accent-primary transition-colors"
          >
            <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to All Projects
          </a>
          
          <a
            href={`${base}#contact`}
            class="group inline-flex items-center px-6 py-3 bg-gradient-accent text-bg-primary rounded-lg font-semibold hover:shadow-xl hover:shadow-accent-primary/20 transition-all duration-300 hover:-translate-y-0.5"
          >
            Let's Work Together
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* Additional animations for this layout */
  @keyframes glow {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.15;
    }
  }
  
  .animate-glow {
    animation: glow 8s ease-in-out infinite;
  }
  
  /* Custom utilities using CSS variables */
  .bg-bg-primary {
    background-color: var(--color-bg-primary);
  }
  
  .bg-bg-secondary {
    background-color: var(--color-bg-secondary);
  }
  
  .bg-bg-elevated {
    background-color: var(--color-bg-elevated);
  }
  
  .bg-bg-hover {
    background-color: var(--color-bg-hover);
  }
  
  .bg-gradient-accent {
    background: var(--gradient-accent);
  }
  
  .text-text-primary {
    color: var(--color-text-primary);
  }
  
  .text-text-secondary {
    color: var(--color-text-secondary);
  }
  
  .text-text-tertiary {
    color: var(--color-text-tertiary);
  }
  
  .text-accent-primary {
    color: var(--color-accent-primary);
  }
  
  .text-accent-secondary {
    color: var(--color-accent-secondary);
  }
  
  .border-border-subtle {
    border-color: var(--color-border-subtle);
  }
  
  .border-border-medium {
    border-color: var(--color-border-medium);
  }
  
  .border-accent-primary {
    border-color: var(--color-accent-primary);
  }
  
  /* Smooth hover transitions on links within article */
  article a {
    position: relative;
  }
  
  article a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: 0;
    left: 0;
    background-color: var(--color-accent-primary);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }
  
  article a:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }
</style>