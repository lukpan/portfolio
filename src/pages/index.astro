---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';

const base = import.meta.env.BASE_URL;

// Define projects data
const featuredProject = {
  title: 'Marcus Aurelius AI mentor',
  description: 'An AI-powered learning companion that brings Stoic philosophy to life through conversational learning, helping users apply ancient wisdom to modern challenges.',
  image: '/portfolio/images/marcus-aurelius-hero.png',
  href: '/portfolio/projects/marcus-aurelius',
  tags: ['AI/ML', 'Conversational Learning', 'Next.js', 'OpenAI']
};

const projects = [
  {
    title: 'AI content generation system',
    description: 'Automated learning content creation system that reduced course development time by 70% while maintaining instructional quality.',
    image: '/portfolio/images/ai-content-gen-hero.png',
    href: '/portfolio/projects/ai-content-generation',
    tags: ['Python', 'ChatGPT', 'Automation']
  },
  {
    title: 'AI-powered academic grading system',
    description: 'Privacy-first AI grading system that saved 60-80 hours per semester while providing consistent, detailed feedback.',
    image: '/portfolio/images/paper-grader-hero.png',
    href: '/portfolio/projects/paper-grader',
    tags: ['Python', 'Claude API', 'Education']
  },
  {
    title: 'Alex Chen learning persona',
    description: 'Interactive learning agent that revolutionized how we teach cloud engineering through personalized scenario-based feedback.',
    image: '/portfolio/images/alex-chen-learner-persona-hero.png',
    href: '/portfolio/projects/alex-chen-learner-persona',
    tags: ['Persona Design', 'Prompt Engineering', 'Learning Design']
  },
  {
    title: 'Modular learning path ecosystem',
    description: 'Scalable learning architecture supporting 9 paths, 40+ modules, and 600+ pages of technical content.',
    image: '/portfolio/images/learn-commercetools-hero.png',
    href: '/portfolio/projects/modular-learning-paths',
    tags: ['Information Architecture', 'Markdown', 'Git']
  },
  {
    title: 'Developer Essentials learning path',
    description: 'Comprehensive 20-hour curriculum that transforms enterprise developers from zero to production-ready through hands-on mastery.',
    image: '/portfolio/images/developer-essentials-hero.png',
    href: '/portfolio/projects/developer-essentials-learning-path',
    tags: ['Curriculum Design', 'TypeScript', 'Java', 'API Education']
  },
  {
    title: 'Zen Electron case study system',
    description: 'Multi-brand e-commerce scenario that teaches real-world problem-solving through unified business contexts.',
    image: '/portfolio/images/zen-electron-hero.png',
    href: '/portfolio/projects/zen-electron',
    tags: ['Scenario-Based Learning', 'Business Context', 'Technical Training']
  },
  {
    title: '3 Steps Away: Social justice education platform',
    description: 'Teaching high schoolers to respond to complex social issues through visual storytelling and experiential learning.',
    image: '/portfolio/images/3steps-hero.png',
    href: '/portfolio/projects/3-steps-away',
    tags: ['Service Learning', 'Visual Design', 'Social Constructivism', 'Youth Education']
  }
];

const skills = {
  'Learning Design': ['Instructional Design', 'Curriculum Development', 'Learning Analytics', 'Assessment Design'],
  'AI & Automation': ['Prompt Engineering', 'ChatGPT/Claude/Gemini', 'AI Integration', 'Process Automation'],
  'Development': ['Python', 'JavaScript/TypeScript', 'React/Next.js', 'Git/GitHub'],
  'Tools': ['Articulate Rise', 'Camtasia', 'Adobe Creative Suite/Figma', 'Markdown/MDX']
};
---

<Layout>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-bg-primary">
      <!-- Atmospheric background effects -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-0 right-1/4 w-[600px] h-[600px] bg-accent-primary/15 rounded-full blur-[120px] animate-glow"></div>
        <div class="absolute bottom-0 left-1/4 w-[500px] h-[500px] bg-accent-secondary/10 rounded-full blur-[100px]" style="animation: glow 10s ease-in-out infinite; animation-delay: 2s;"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6 py-24 md:py-40">
        <div class="max-w-4xl stagger-children">
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-display font-bold text-text-primary mb-8 leading-[1.1]">
            <span class="block">Building learning ecosystems</span>
            <span class="block text-accent-primary">that drive impact</span>
          </h1>
          
          <p class="text-xl md:text-2xl text-text-secondary mb-12 leading-relaxed max-w-3xl">
            Building scalable learning systems with AI—serving thousands of enterprise learners while transforming productivity through intelligent automation.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href={`${base}#work`}
              class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-accent text-bg-primary rounded-lg font-bold hover:shadow-xl hover:shadow-accent-primary/30 transition-all duration-300 hover:-translate-y-1"
            >
              View my work
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </a>
            <a
              href={`${base}#contact`}
              class="inline-flex items-center justify-center px-8 py-4 border border-border-medium rounded-lg font-bold text-text-primary hover:border-accent-primary hover:bg-bg-elevated transition-all duration-300"
            >
              Get in touch
            </a>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 -ml-3 flex items-center justify-center animate-bounce">
        <svg class="w-6 h-6 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </div>
    </section>
    
    <!-- Featured Project -->
    <section class="relative py-24 md:py-40 bg-bg-primary overflow-hidden">
      <!-- Atmospheric background effects -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-accent-primary/10 rounded-full blur-[150px] animate-glow"></div>
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-accent-secondary/5 rounded-full blur-[100px]" style="animation: glow 12s ease-in-out infinite; animation-delay: 3s;"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6">
        <!-- Header Badge with enhanced animation -->
        <div class="flex mb-8">
          <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-accent rounded-full opacity-75 blur-md group-hover:opacity-100 transition-opacity"></div>
            <div class="relative inline-flex items-center justify-center gap-2 px-6 py-3 bg-bg-elevated border-2 border-accent-primary/50 rounded-full text-sm font-bold text-accent-primary shadow-lg">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-primary opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-accent-primary"></span>
              </span>
              <span class="uppercase tracking-wider">Featured Project</span>
              <span class="w-2 h-2"></span>
            </div>
          </div>
        </div>
        
        <!-- Split Layout with Image on Right -->
        <div class="relative">
          <!-- Animated gradient border -->
          <div class="absolute -inset-1 bg-gradient-to-r from-accent-primary via-accent-secondary to-accent-primary rounded-3xl opacity-20 blur-xl animate-border-glow"></div>
          
          <div class="relative rounded-3xl border border-border-medium overflow-hidden shadow-2xl">
            <!-- Grid Container -->
            <div class="grid lg:grid-cols-2 gap-0 min-h-[600px] md:min-h-[700px] lg:min-h-[800px]">
              <!-- Content Column -->
              <div class="relative bg-gradient-to-br from-bg-secondary to-bg-elevated p-8 md:p-12 lg:p-16 flex items-center">
                <div class="w-full space-y-8">
                  <!-- Title with AI emphasis -->
                  <div>
                    <div class="inline-flex items-center gap-2 mb-4 px-4 py-2 bg-accent-primary/20 backdrop-blur-sm border border-accent-primary/40 rounded-full">
                      <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M13 7H7v6h6V7z"/>
                        <path fill-rule="evenodd" d="M7 2a1 1 0 012 0v1h2V2a1 1 0 112 0v1h2a2 2 0 012 2v2h1a1 1 0 110 2h-1v2h1a1 1 0 110 2h-1v2a2 2 0 01-2 2h-2v1a1 1 0 11-2 0v-1H9v1a1 1 0 11-2 0v-1H5a2 2 0 01-2-2v-2H2a1 1 0 110-2h1V9H2a1 1 0 010-2h1V5a2 2 0 012-2h2V2zM5 5h10v10H5V5z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-sm font-bold text-accent-primary uppercase tracking-wider">AI-Powered Learning</span>
                    </div>
                    
                    <h2 class="text-4xl md:text-6xl lg:text-7xl font-display font-bold text-text-primary mb-4 leading-[1.05] tracking-tight">
                      <span class="block">Marcus Aurelius</span>
                      <span class="block text-accent-primary">AI Mentor</span>
                    </h2>
                    
                    <p class="text-lg md:text-xl text-text-primary leading-relaxed max-w-xl bg-bg-primary/95 p-4 rounded-lg -ml-4">
                      An intelligent learning companion that brings ancient Stoic wisdom to modern challenges through conversational AI
                    </p>
                  </div>
                  
                  <!-- Key Metrics with glass effect -->
                  <div class="flex flex-wrap gap-4">
                    <div class="backdrop-blur-md bg-bg-elevated/80 rounded-xl p-4 border border-border-medium hover:border-accent-primary/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-accent-primary/20">
                      <div class="text-3xl font-bold text-accent-primary mb-1">200+</div>
                      <div class="text-sm text-text-tertiary font-semibold">Active Users</div>
                    </div>
                    <div class="backdrop-blur-md bg-bg-elevated/80 rounded-xl p-4 border border-border-medium hover:border-accent-primary/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-accent-primary/20">
                      <div class="text-3xl font-bold text-accent-primary mb-1">24/7</div>
                      <div class="text-sm text-text-tertiary font-semibold">AI Guidance</div>
                    </div>
                    <div class="backdrop-blur-md bg-bg-elevated/80 rounded-xl p-4 border border-border-medium hover:border-accent-primary/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-accent-primary/20">
                      <div class="text-3xl font-bold text-accent-primary mb-1">∞</div>
                      <div class="text-sm text-text-tertiary font-semibold">Scalable</div>
                    </div>
                  </div>
                  
                  <!-- Tags with glass effect -->
                  <div class="flex flex-wrap gap-3">
                    {featuredProject.tags.map((tag, index) => (
                      <span 
                        class="inline-flex items-center px-4 py-2 bg-bg-primary/60 border border-accent-primary/40 text-accent-primary rounded-lg text-sm font-semibold hover:bg-bg-primary/80 hover:shadow-lg hover:shadow-accent-primary/20 transition-all duration-300 hover:-translate-y-0.5"
                        style={`animation: fadeInUp 0.6s ease-out forwards; animation-delay: ${0.8 + index * 0.1}s; opacity: 0;`}
                      >
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  <!-- CTA Button with enhanced styling -->
                  <div class="pt-2">
                    <a
                      href={featuredProject.href}
                      class="group/btn relative inline-flex items-center justify-center px-8 py-4 bg-gradient-accent text-bg-primary rounded-xl font-bold overflow-hidden hover:shadow-2xl hover:shadow-accent-primary/50 transition-all duration-300 hover:-translate-y-1 hover:scale-105"
                    >
                      <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-accent-secondary to-accent-primary opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></span>
                      <span class="relative flex items-center text-base md:text-lg">
                        Explore full case study
                        <svg class="w-5 h-5 ml-2 group-hover/btn:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                      </span>
                    </a>
                  </div>
                </div>
              </div>
              
              <!-- Visual Column -->
              <div class="relative overflow-hidden group">
                <!-- Layered glow effects -->
                <div class="absolute -inset-4 bg-gradient-accent opacity-30 blur-3xl group-hover:opacity-40 transition-opacity duration-500"></div>
                
                <!-- GIF/Image -->
                <div class="relative h-full w-full">
                  <img
                    src={featuredProject.image}
                    alt={featuredProject.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out"
                  />
                  
                  <!-- Overlay gradient for depth -->
                  <div class="absolute inset-0 bg-gradient-to-l from-transparent via-transparent to-bg-secondary/20 pointer-events-none"></div>
                  
                  <!-- Floating decorative elements -->
                  <div class="absolute top-1/4 right-1/4 w-32 h-32 bg-accent-primary/20 rounded-full blur-3xl animate-float"></div>
                  <div class="absolute bottom-1/3 left-1/3 w-40 h-40 bg-accent-secondary/15 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Projects Grid -->
    <section id="work" class="py-24 md:py-32 bg-bg-primary">
      <div class="max-w-7xl mx-auto px-6">
        <div class="mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold text-text-primary mb-4">Recent projects</h2>
          <p class="text-xl text-text-secondary">Exploring the intersection of AI and instructional design</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project) => (
            <ProjectCard {...project} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Skills Section -->
    <section class="py-24 md:py-32 bg-bg-secondary">
      <div class="max-w-7xl mx-auto px-6">
        <div class="mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold text-text-primary mb-4">Skills & expertise</h2>
          <p class="text-xl text-text-secondary">Tools and technologies I use to create impactful learning experiences</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {Object.entries(skills).map(([category, items]) => (
            <div class="bg-bg-elevated border border-border-subtle rounded-xl p-6 hover:border-accent-primary/30 transition-all duration-300 hover:-translate-y-1">
              <h3 class="font-bold text-accent-primary mb-4 text-sm uppercase tracking-wider">{category}</h3>
              <ul class="space-y-3">
                {items.map((skill) => (
                  <li class="text-text-secondary flex items-start text-sm">
                    <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    {skill}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Brief About Section -->
    <section class="py-24 md:py-32 bg-bg-primary">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-text-primary mb-8 leading-tight">Building the future of learning, one system at a time</h2>
        
        <div class="space-y-6 text-lg text-text-secondary leading-relaxed max-w-5xl">
          <p>
            My path to instructional design began in international classrooms spanning three continents—from political philosophy at Universiteit Maastricht to leading a humanities department of 30+ educators in Australia. Co-founding <span class="text-accent-primary font-semibold">3 Steps Away</span>, a social justice education enterprise, taught me how to scale learning solutions from concept to market—understanding both educational impact and business sustainability.
          </p>
          <p>
            At <span class="text-accent-primary font-semibold">commercetools</span>, I've built learning infrastructure serving thousands of enterprise developers across three continents. By pioneering AI-powered content workflows, I increased team efficiency by 60%—freeing 400+ hours annually to scale our learning ecosystem from 0 to 9 interconnected paths with 40+ modules. This work required partnering with Product, Engineering, and Customer Success leadership to align learning strategy with business objectives.
          </p>
          <p>
            With a Graduate Certificate in Educational Design from Monash University and hands-on experience building production-ready AI tools, I combine rigorous learning theory with technical execution. I'm now seeking senior instructional design opportunities where I can establish comprehensive impact measurement frameworks—demonstrating how learning programs contribute to business outcomes like time-to-competency, user adoption, and customer retention.
          </p>
        </div>
        
        <a
          href={`${base}/about/`}
          class="group inline-flex items-center mt-8 text-accent-primary font-bold hover:text-accent-secondary transition-colors"
        >
          Read my full story
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </section>
    
    <!-- Contact Section -->
    <section id="contact" class="relative py-24 md:py-32 bg-bg-secondary overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent-primary/10 rounded-full blur-[120px]"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-text-primary mb-6">Let's work together</h2>
        <p class="text-xl text-text-secondary mb-12 max-w-2xl">
          If you're looking for an instructional designer who can leverage AI to transform your learning initiatives, I'd love to connect.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="mailto:lukepanaccio@gmail.com"
            class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-accent text-bg-primary rounded-lg font-bold hover:shadow-xl hover:shadow-accent-primary/30 transition-all duration-300 hover:-translate-y-1"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email me
          </a>
          <a
            href="https://www.linkedin.com/in/luke-p-b444b124b/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 border border-border-medium rounded-lg font-bold text-text-primary hover:border-accent-primary hover:bg-bg-elevated transition-all duration-300"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            Connect on LinkedIn
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* Custom utilities using CSS variables */
  .bg-bg-primary {
    background-color: var(--color-bg-primary);
  }
  
  .bg-bg-secondary {
    background-color: var(--color-bg-secondary);
  }
  
  .bg-bg-elevated {
    background-color: var(--color-bg-elevated);
  }
  
  .bg-gradient-accent {
    background: var(--gradient-accent);
  }
  
  .text-text-primary {
    color: var(--color-text-primary);
  }
  
  .text-text-secondary {
    color: var(--color-text-secondary);
  }
  
  .text-text-tertiary {
    color: var(--color-text-tertiary);
  }
  
  .text-accent-primary {
    color: var(--color-accent-primary);
  }
  
  .text-accent-secondary {
    color: var(--color-accent-secondary);
  }
  
  .text-bg-primary {
    color: var(--color-bg-primary);
  }
  
  .border-border-subtle {
    border-color: var(--color-border-subtle);
  }
  
  .border-border-medium {
    border-color: var(--color-border-medium);
  }
  
  .border-accent-primary {
    border-color: var(--color-accent-primary);
  }
  
  /* Animation for glow effect */
  @keyframes glow {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.2;
    }
  }
  
  .animate-glow {
    animation: glow 8s ease-in-out infinite;
  }
  
  /* Featured section animations */
  @keyframes border-glow {
    0%, 100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 0.4;
      transform: scale(1.02);
    }
  }
  
  .animate-border-glow {
    animation: border-glow 4s ease-in-out infinite;
  }
  
  @keyframes border-slide {
    0% {
      transform: translateY(-100%);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateY(100%);
      opacity: 0;
    }
  }
  
  .animate-border-slide {
    animation: border-slide 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
    }
    33% {
      transform: translateY(-20px) translateX(10px);
    }
    66% {
      transform: translateY(-10px) translateX(-10px);
    }
  }
  
  .animate-float {
    animation: float 8s ease-in-out infinite;
  }
  
  /* Fade in up animation for tags */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>