---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="404: Page Not Found">
  <Header />
  
  <main class="min-h-[70vh] flex items-center justify-center relative overflow-hidden bg-bg-primary">
    <!-- Atmospheric background effects -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 right-1/4 w-[500px] h-[500px] bg-accent-primary/10 rounded-full blur-[120px] animate-glow"></div>
      <div class="absolute bottom-1/4 left-1/4 w-[400px] h-[400px] bg-accent-secondary/5 rounded-full blur-[100px]" style="animation: glow 10s ease-in-out infinite; animation-delay: 2s;"></div>
    </div>
    
    <div class="relative max-w-3xl mx-auto px-6 text-center z-10">
      <h1 class="text-6xl md:text-8xl font-display font-bold text-text-primary mb-6">
        404
      </h1>
      
      <h2 class="text-2xl md:text-3xl font-display font-bold text-accent-primary mb-8">
        Page not found
      </h2>
      
      <p class="text-xl text-text-secondary mb-12 leading-relaxed max-w-2xl mx-auto">
        The page you're looking for doesn't exist or has been moved. Let's get you back to the main portfolio.
      </p>
      
      <a
        href={base}
        class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-accent text-bg-primary rounded-lg font-bold hover:shadow-xl hover:shadow-accent-primary/30 transition-all duration-300 hover:-translate-y-1"
      >
        Return Home
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
      </a>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  /* Custom utilities using CSS variables */
  .bg-bg-primary {
    background-color: var(--color-bg-primary);
  }
  
  .bg-gradient-accent {
    background: var(--gradient-accent);
  }
  
  .text-text-primary {
    color: var(--color-text-primary);
  }
  
  .text-text-secondary {
    color: var(--color-text-secondary);
  }
  
  .text-accent-primary {
    color: var(--color-accent-primary);
  }
  
  .text-bg-primary {
    color: var(--color-bg-primary);
  }
  
  /* Animation for glow effect */
  @keyframes glow {
    0%, 100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.2;
    }
  }
  
  .animate-glow {
    animation: glow 8s ease-in-out infinite;
  }
</style>
